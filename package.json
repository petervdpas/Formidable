{
  "name": "formidable",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.formidable.editor",
    "productName": "Formidable",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{test,__tests__,tests}/**",
      "!node_modules/.bin",
      "!**/*.md",
      "!dist",
      "!build"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "portable",
      "icon": "assets/formidable.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "codemirror": "^5.65.19",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.0",
    "sanitize-html": "^2.17.0",
    "sortablejs": "^1.15.6"
  }
}