{
  "name": "formidable",
  "version": "1.2.4",
  "description": "Template/Form editor in Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "electron-builder --dir",
    "patch-icon": "node scripts/patch-icon.js",
    "build": "npm run prebuild && npm run patch-icon && electron-builder --win --prepackaged dist/win-unpacked"
  },
  "build": {
    "appId": "com.formidable.editor",
    "productName": "Formidable",
    "icon": "assets/formidable.ico",
    "asar": false,
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{test,__tests__,tests}/**",
      "!node_modules/.bin",
      "!**/*.md",
      "!**/*.meta.json",
      "!dist",
      "!build",
      "!temp"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/formidable.ico",
      "signAndEditExecutable": false,
      "signExts": []
    },
    "mac": {
      "icon": "assets/formidable.icns",
      "target": "dmg",
      "sign": false,
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/formidable.png",
      "category": "Utility",
      "maintainer": "Peter van de Pas",
      "synopsis": "Template/Form Editor",
      "description": "Formidable is een Electron-gebaseerde editor voor templates en Markdown formulieren"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Formidable"
    }
  },
  "keywords": [],
  "author": "Peter van de Pas",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "rcedit": "^4.0.1"
  },
  "dependencies": {
    "codemirror": "^5.65.19",
    "easymde": "^2.20.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.0",
    "sanitize-html": "^2.17.0",
    "sortablejs": "^1.15.6"
  }
}
